@model PizzeriaCC.Models.Pizza

@{
    ViewData["Title"] = "Nueva Pizza";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Header -->
            <div class="d-flex align-items-center mb-4">
                <a asp-action="Index" class="btn btn-outline-danger me-3">
                    <i class="bi bi-arrow-left"></i>
                </a>
                <div>
                    <h1 class="mb-0">
                        <i class="bi bi-pizza text-danger"></i> Nueva Pizza
                    </h1>
                    <p class="text-muted mb-0">Agrega una nueva pizza al menú</p>
                </div>
            </div>

            <!-- Form Card -->
            <div class="card shadow-lg border-0">
                <div class="card-header bg-gradient-danger text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-clipboard-plus"></i> Detalles de la Pizza
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" id="formPizza">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Nombre -->
                        <div class="form-floating mb-3">
                            <input asp-for="Nombre" class="form-control form-control-lg" id="floatingNombre" placeholder="Margarita" required />
                            <label for="floatingNombre">
                                <i class="bi bi-card-heading"></i> Nombre de la Pizza
                            </label>
                            <span asp-validation-for="Nombre" class="text-danger small"></span>
                        </div>

                        <!-- Precio Base -->
                        <div class="form-floating mb-3">
                            <input asp-for="PrecioBase" type="number" step="0.01" class="form-control form-control-lg" id="floatingPrecio" placeholder="0.00" required />
                            <label for="floatingPrecio">
                                <i class="bi bi-cash-coin"></i> Precio Base (S/)
                            </label>
                            <span asp-validation-for="PrecioBase" class="text-danger small"></span>
                            <div class="form-text">
                                <i class="bi bi-info-circle"></i> Precio sin ingredientes adicionales
                            </div>
                        </div>

                        <!-- Descripción -->
                        <div class="form-floating mb-4">
                            <textarea asp-for="Descripcion" class="form-control" id="floatingDescripcion"
                                      placeholder="Descripción" style="height: 120px" maxlength="300"></textarea>
                            <label for="floatingDescripcion">
                                <i class="bi bi-text-paragraph"></i> Descripción
                            </label>
                            <span asp-validation-for="Descripcion" class="text-danger small"></span>
                            <div class="form-text">
                                <i class="bi bi-info-circle"></i> Máximo 300 caracteres (<span id="charCount">0</span>/300)
                            </div>
                        </div>

                        <!-- Preview Card -->
                        <div class="card bg-light mb-4">
                            <div class="card-body">
                                <h6 class="text-muted mb-3">
                                    <i class="bi bi-eye"></i> Vista Previa de la Carta
                                </h6>
                                <div class="card preview-card">
                                    <div class="pizza-preview-img">
                                        <i class="bi bi-pizza"></i>
                                    </div>
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <h5 class="card-title mb-0" id="previewNombre">Nombre de la Pizza</h5>
                                            <span class="badge bg-success rounded-pill fs-6" id="previewPrecio">S/ 0.00</span>
                                        </div>
                                        <p class="card-text text-muted small" id="previewDescripcion">
                                            Descripción de la pizza...
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Buttons -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                <i class="bi bi-x-circle"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger btn-lg">
                                <i class="bi bi-check-circle-fill"></i> Crear Pizza
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Info Cards -->
            <div class="row mt-4">
                <div class="col-md-6">
                    <div class="card border-success">
                        <div class="card-body">
                            <h6 class="card-title">
                                <i class="bi bi-check-circle text-success"></i> Consejos
                            </h6>
                            <ul class="mb-0 small">
                                <li>Usa nombres atractivos y descriptivos</li>
                                <li>El precio debe cubrir costos e ingredientes</li>
                                <li>Describe los ingredientes principales</li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card border-warning">
                        <div class="card-body">
                            <h6 class="card-title">
                                <i class="bi bi-lightbulb text-warning"></i> Próximo paso
                            </h6>
                            <p class="mb-0 small">
                                Después de crear la pizza, podrás asignarle ingredientes adicionales desde la sección de ingredientes.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient-danger {
        background: linear-gradient(135deg, #eb3349 0%, #f45c43 100%);
    }

    .pizza-preview-img {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        height: 150px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 10px 10px 0 0;
    }

        .pizza-preview-img i {
            font-size: 4rem;
            color: rgba(220, 53, 69, 0.3);
        }

    .preview-card {
        border-radius: 10px;
        overflow: hidden;
    }

    .card {
        border-radius: 15px;
    }

    .form-control:focus, .form-select:focus {
        border-color: #eb3349;
        box-shadow: 0 0 0 0.2rem rgba(235, 51, 73, 0.25);
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Vista previa en tiempo real
        function updatePreview() {
            const nombre = document.getElementById('floatingNombre').value || 'Nombre de la Pizza';
            const precio = document.getElementById('floatingPrecio').value || '0.00';
            const descripcion = document.getElementById('floatingDescripcion').value || 'Descripción de la pizza...';

            document.getElementById('previewNombre').textContent = nombre;
            document.getElementById('previewPrecio').textContent = 'S/ ' + parseFloat(precio).toFixed(2);
            document.getElementById('previewDescripcion').textContent = descripcion;
        }

        // Contador de caracteres
        function updateCharCount() {
            const texto = document.getElementById('floatingDescripcion').value;
            document.getElementById('charCount').textContent = texto.length;
        }

        // Escuchar cambios
        document.getElementById('floatingNombre').addEventListener('input', updatePreview);
        document.getElementById('floatingPrecio').addEventListener('input', updatePreview);
        document.getElementById('floatingDescripcion').addEventListener('input', function() {
            updatePreview();
            updateCharCount();
        });

        // Inicializar
        updatePreview();
        updateCharCount();
    </script>
}