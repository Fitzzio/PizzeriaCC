@model PizzeriaCC.Models.Pedido

@{
    ViewData["Title"] = $"Pedido #{Model.Id}";
}

<h1>Detalles del Pedido #@Model.Id</h1>

<div class="row">
    <div class="col-md-6">
        <div class="card mb-3">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Información del Cliente</h5>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-4">Cliente:</dt>
                    <dd class="col-sm-8">
                        <strong>@Model.Usuario.Nombre @Model.Usuario.Apellido</strong>
                    </dd>

                    <dt class="col-sm-4">Email:</dt>
                    <dd class="col-sm-8">@Model.Usuario.Email</dd>

                    <dt class="col-sm-4">Fecha:</dt>
                    <dd class="col-sm-8">@Model.Fecha.ToString("dd/MM/yyyy HH:mm")</dd>
                </dl>
            </div>
        </div>

        <div class="card mb-3">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">Detalles del Pedido</h5>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-4">Estado:</dt>
                    <dd class="col-sm-8">
                        @{
                            string badgeClass = Model.Estado switch
                            {
                                "Pendiente" => "bg-warning text-dark",
                                "En Preparación" => "bg-info",
                                "En Camino" => "bg-primary",
                                "Entregado" => "bg-success",
                                "Cancelado" => "bg-danger",
                                _ => "bg-secondary"
                            };
                        }
                        <span class="badge @badgeClass">@Model.Estado</span>
                    </dd>

                    <dt class="col-sm-4">Método de Pago:</dt>
                    <dd class="col-sm-8">@Model.MetodoPago</dd>

                    <dt class="col-sm-4">Motorizado:</dt>
                    <dd class="col-sm-8">
                        @if (Model.Motorizado != null)
                        {
                            <span>@Model.Motorizado.Nombre</span>
                            @if (Model.Motorizado.Disponible)
                            {
                                <span class="text-success">✓</span>
                            }
                        }
                        else
                        {
                            <span class="text-muted">Sin asignar</span>
                        }
                    </dd>
                </dl>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card mb-3">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0">Pizzas del Pedido</h5>
            </div>
            <div class="card-body">
                @if (Model.PedidoDetalles != null && Model.PedidoDetalles.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-sm table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>Pizza</th>
                                    <th class="text-center">Cant.</th>
                                    <th class="text-end">Precio Unit.</th>
                                    <th class="text-end">Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var detalle in Model.PedidoDetalles)
                                {
                                    <tr>
                                        <td>
                                            <strong>@detalle.Pizza.Nombre</strong>
                                            @if (!string.IsNullOrEmpty(detalle.Pizza.Descripcion))
                                            {
                                                <br />
                                                <small class="text-muted">@detalle.Pizza.Descripcion</small>
                                            }
                                        </td>
                                        <td class="text-center">@detalle.Cantidad</td>
                                        <td class="text-end">S/ @detalle.Pizza.PrecioBase.ToString("N2")</td>
                                        <td class="text-end"><strong>S/ @detalle.Subtotal.ToString("N2")</strong></td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr class="table-active">
                                    <td colspan="3" class="text-end"><strong>TOTAL:</strong></td>
                                    <td class="text-end">
                                        <h5 class="mb-0 text-success">S/ @Model.Total.ToString("N2")</h5>
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-warning mb-0">
                        No hay pizzas en este pedido.
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
        <i class="bi bi-pencil"></i> Editar
    </a>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Volver a la lista
    </a>
    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
        <i class="bi bi-trash"></i> Eliminar
    </a>
</div>