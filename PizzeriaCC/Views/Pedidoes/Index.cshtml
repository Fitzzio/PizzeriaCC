@model IEnumerable<PizzeriaCC.Models.Pedido>

@{
    ViewData["Title"] = "Lista de Pedidos";
}

<h1>Pedidos</h1>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Crear Nuevo Pedido
    </a>
</p>

@if (!Model.Any())
{
    <div class="alert alert-info">
        No hay pedidos registrados. <a asp-action="Create">Crear el primer pedido</a>
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Cliente</th>
                    <th>Pizzas</th>
                    <th>Fecha</th>
                    <th>Total</th>
                    <th>Estado</th>
                    <th>Método de Pago</th>
                    <th>Motorizado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><strong>#@item.Id</strong></td>
                        <td>
                            @if (item.Usuario != null)
                            {
                                <strong>@item.Usuario.Nombre @item.Usuario.Apellido</strong>
                    
                                <br />
                                <small class="text-muted">@item.Usuario.Email</small>
                            }
                            else
                            {
                                <span class="text-muted">Usuario #@item.UsuarioId</span>
                            }
                        </td>
                        <td>
                            @if (item.PedidoDetalles != null && item.PedidoDetalles.Any())
                            {
                                <ul class="list-unstyled mb-0">
                                    @foreach (var detalle in item.PedidoDetalles)
                                    {
                                        <li>
                                            <small>
                                                <strong>@detalle.Cantidad</strong>x @detalle.Pizza.Nombre
                                                <span class="text-muted">(S/ @detalle.Subtotal.ToString("N2"))</span>
                                            </small>
                                        </li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <small class="text-muted">Sin pizzas</small>
                            }
                        </td>
                        <td>
                            <small>@item.Fecha.ToString("dd/MM/yyyy")</small><br />
                            <small class="text-muted">@item.Fecha.ToString("HH:mm")</small>
                        </td>
                        <td>
                            <strong class="text-success">S/ @item.Total.ToString("N2")</strong>
                        </td>
                        <td>
                            @{
                                string badgeClass = item.Estado switch
                                {
                                    "Pendiente" => "bg-warning text-dark",
                                    "En Preparación" => "bg-info",
                                    "En Camino" => "bg-primary",
                                    "Entregado" => "bg-success",
                                    "Cancelado" => "bg-danger",
                                    _ => "bg-secondary"
                                };
                            }
                            <span class="badge @badgeClass">@item.Estado</span>
                        </td>
                        <td><small>@item.MetodoPago</small></td>
                        <td>
                            @if (item.Motorizado != null)
                            {
                                <small>@item.Motorizado.Nombre</small>
                                @if (item.Motorizado.Disponible)
                                {
                                    <span class="text-success">✓</span>
                                }
                            }
                            else
                            {
                                <small class="text-muted">-</small>
                            }
                        </td>
                        <td>
                            <div class="btn-group btn-group-sm" role="group">
                                <a asp-action="Details" asp-route-id="@item.Id"
                                   class="btn btn-info" title="Ver detalles">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.Id"
                                   class="btn btn-warning" title="Editar">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id"
                                   class="btn btn-danger" title="Eliminar">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="mt-3">
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h6 class="card-title">Estadísticas</h6>
                        <p class="mb-1">
                            <strong>Total de pedidos:</strong> @Model.Count()
                        </p>
                        <p class="mb-1">
                            <strong>Total facturado:</strong>
                            <span class="text-success">S/ @Model.Sum(p => p.Total).ToString("N2")</span>
                        </p>
                        <p class="mb-0">
                            <strong>Promedio por pedido:</strong>
                            S/ @(Model.Any() ? (Model.Sum(p => p.Total) / Model.Count()).ToString("N2") : "0.00")
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h6 class="card-title">Por Estado</h6>
                        @{
                            var porEstado = Model.GroupBy(p => p.Estado).ToList();
                        }
                        @foreach (var grupo in porEstado)
                        {
                            <p class="mb-1">
                                <strong>@grupo.Key:</strong> @grupo.Count() pedido(s) - S/ @grupo.Sum(p => p.Total).ToString("N2")
                            </p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}