@model PizzeriaCC.Models.Ingrediente

@{
    ViewData["Title"] = "Nuevo Ingrediente";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <!-- Header -->
            <div class="d-flex align-items-center mb-4">
                <a asp-action="Index" class="btn btn-outline-warning me-3">
                    <i class="bi bi-arrow-left"></i>
                </a>
                <div>
                    <h1 class="mb-0">
                        <i class="bi bi-egg-fried text-warning"></i> Nuevo Ingrediente
                    </h1>
                    <p class="text-muted mb-0">Agrega un ingrediente para personalizar pizzas</p>
                </div>
            </div>

            <!-- Form Card -->
            <div class="card shadow-lg border-0">
                <div class="card-header bg-gradient-warning">
                    <h5 class="mb-0 text-dark">
                        <i class="bi bi-plus-circle"></i> Detalles del Ingrediente
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" id="formIngrediente">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Nombre -->
                        <div class="form-floating mb-3">
                            <input asp-for="Nombre" class="form-control form-control-lg" id="floatingNombre" placeholder="Queso Extra" required />
                            <label for="floatingNombre">
                                <i class="bi bi-card-text"></i> Nombre del Ingrediente
                            </label>
                            <span asp-validation-for="Nombre" class="text-danger small"></span>
                            <div class="form-text">
                                <i class="bi bi-info-circle"></i> Ejemplo: Queso Extra, Jamón, Champiñones, etc.
                            </div>
                        </div>

                        <!-- Precio Extra -->
                        <div class="mb-4">
                            <label class="form-label">
                                <i class="bi bi-cash-stack"></i> Precio Extra (S/)
                            </label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text bg-warning">
                                    <i class="bi bi-plus-circle"></i> S/
                                </span>
                                <input asp-for="PrecioExtra" type="number" step="0.01" class="form-control" id="floatingPrecio" placeholder="0.00" required />
                            </div>
                            <span asp-validation-for="PrecioExtra" class="text-danger small"></span>
                            <div class="form-text">
                                <i class="bi bi-info-circle"></i> Precio adicional al agregar este ingrediente a una pizza
                            </div>
                        </div>

                        <!-- Precio Slider (Visual) -->
                        <div class="mb-4">
                            <label class="form-label text-muted small">Referencia de precio:</label>
                            <div class="d-flex justify-content-between text-muted small mb-2">
                                <span><i class="bi bi-circle-fill text-success"></i> Económico (S/ 1-3)</span>
                                <span><i class="bi bi-circle-fill text-warning"></i> Normal (S/ 3-5)</span>
                                <span><i class="bi bi-circle-fill text-danger"></i> Premium (S/ 5+)</span>
                            </div>
                            <div class="progress" style="height: 10px;">
                                <div id="priceIndicator" class="progress-bar" role="progressbar" style="width: 0%"></div>
                            </div>
                        </div>

                        <!-- Preview Card -->
                        <div class="card bg-light mb-4">
                            <div class="card-body">
                                <h6 class="text-muted mb-3">
                                    <i class="bi bi-eye"></i> Vista Previa
                                </h6>
                                <div class="card preview-ingredient-card">
                                    <div class="card-body">
                                        <div class="d-flex align-items-center mb-3">
                                            <div class="ingrediente-icon-preview me-3">
                                                <i class="bi bi-egg-fried"></i>
                                            </div>
                                            <div class="flex-grow-1">
                                                <h5 class="card-title mb-1" id="previewNombre">Nombre del Ingrediente</h5>
                                                <p class="card-text text-muted small mb-0">Ingrediente adicional</p>
                                            </div>
                                        </div>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <span class="text-muted small">Precio Extra:</span>
                                            <span class="badge bg-success fs-6" id="previewPrecio">+ S/ 0.00</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Buttons -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                <i class="bi bi-x-circle"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-warning btn-lg">
                                <i class="bi bi-check-circle-fill"></i> Crear Ingrediente
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Info Card -->
            <div class="card border-info mt-4">
                <div class="card-body">
                    <h6 class="card-title">
                        <i class="bi bi-lightbulb text-warning"></i> Ejemplos de ingredientes populares
                    </h6>
                    <div class="row">
                        <div class="col-6">
                            <ul class="mb-0 small">
                                <li>Queso Extra (S/ 3.00)</li>
                                <li>Jamón (S/ 4.00)</li>
                                <li>Pepperoni (S/ 3.50)</li>
                            </ul>
                        </div>
                        <div class="col-6">
                            <ul class="mb-0 small">
                                <li>Champiñones (S/ 2.50)</li>
                                <li>Aceitunas (S/ 2.00)</li>
                                <li>Tocino (S/ 4.50)</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient-warning {
        background: linear-gradient(135deg, #f2994a 0%, #f2c94c 100%);
    }

    .ingrediente-icon-preview {
        width: 50px;
        height: 50px;
        border-radius: 12px;
        background: linear-gradient(135deg, #ffeaa7 0%, #fdcb6e 100%);
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .ingrediente-icon-preview i {
            font-size: 1.5rem;
            color: #d63031;
        }

    .preview-ingredient-card {
        border-radius: 10px;
        border: 1px solid #dee2e6;
    }

    .card {
        border-radius: 15px;
    }

    .form-control:focus {
        border-color: #f2994a;
        box-shadow: 0 0 0 0.2rem rgba(242, 153, 74, 0.25);
    }

    .input-group-text.bg-warning {
        border-color: #f2994a;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Vista previa en tiempo real
        function updatePreview() {
            const nombre = document.getElementById('floatingNombre').value || 'Nombre del Ingrediente';
            const precio = parseFloat(document.getElementById('floatingPrecio').value) || 0;

            document.getElementById('previewNombre').textContent = nombre;
            document.getElementById('previewPrecio').textContent = '+ S/ ' + precio.toFixed(2);

            // Actualizar indicador de precio
            updatePriceIndicator(precio);
        }

        function updatePriceIndicator(precio) {
            const indicator = document.getElementById('priceIndicator');
            let width = 0;
            let bgClass = 'bg-success';

            if (precio <= 3) {
                width = (precio / 3) * 33;
                bgClass = 'bg-success';
            } else if (precio <= 5) {
                width = 33 + ((precio - 3) / 2) * 33;
                bgClass = 'bg-warning';
            } else {
                width = 66 + Math.min(((precio - 5) / 5) * 34, 34);
                bgClass = 'bg-danger';
            }

            indicator.className = 'progress-bar ' + bgClass;
            indicator.style.width = Math.min(width, 100) + '%';
        }

        // Escuchar cambios
        document.getElementById('floatingNombre').addEventListener('input', updatePreview);
        document.getElementById('floatingPrecio').addEventListener('input', updatePreview);

        // Inicializar
        updatePreview();
    </script>
}